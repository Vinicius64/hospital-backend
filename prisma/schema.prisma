generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Paciente {
  id             String  @unique
  nome           String
  CPF            String   @unique
  sexo           String
  dataNascimento DateTime
  estadoCivil    String
  email          String   @unique
  senha          String
  deleted        Boolean  @default(false)
  consultas      Consulta[]
  exames         Exame[]
  role           String   @default("paciente") // Novo campo para diferenciar os níveis de usuário
}

model Medico {
  id             String  @unique
  nome           String
  CRI            String   @unique
  sexo           String
  especialidade  String   
  dataNascimento DateTime
  email          String   @unique
  senha          String
  deleted        Boolean  @default(false)
  consultas      Consulta[]
  exames         Exame[]
  role           String   @default("medico") // Novo campo para diferenciar os níveis de usuário
}

model Consulta {
  id             String  @unique
  idMedico       String
  idPaciente     String
  dataHorario DateTime
  medico         Medico   @relation(fields: [idMedico], references: [id])
  paciente       Paciente @relation(fields: [idPaciente], references: [id])
}

model Exame {
  id             String  @unique
  idMedico       String
  idPaciente     String
  resultado      String
  dataHorario    DateTime
  nomeExame      String
  medico         Medico   @relation(fields: [idMedico], references: [id])
  paciente       Paciente @relation(fields: [idPaciente], references: [id])
}

model Administrador {
  id            String  @unique
  nome          String
  email         String   @unique
  senha         String
  role          String   @default("administrador") // Novo campo para diferenciar os níveis de usuário
}

model loglogin {
  id            String  @unique
  nome          String
  dataHorario   String 
  role          String  
}